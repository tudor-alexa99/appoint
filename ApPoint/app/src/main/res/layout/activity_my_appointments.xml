<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAppointmentsActivity">

    <ImageView
        android:id="@+id/ellipse_5"
        android:layout_width="412dp"
        android:layout_height="382dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="444dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ellipse_2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_appointments_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_margin="@dimen/spacing_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="76dp"
        android:padding="@dimen/spacing_small"
        android:text="@string/my_appointments"
        app:layout_constraintBottom_toTopOf="@+id/my_appointments_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_show_places"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_square_button"
        android:backgroundTint="@color/appointments_accent"
        android:clickable="true"
        android:paddingHorizontal="8dp"
        android:paddingVertical="@dimen/card_padding_top_bottom"
        android:shadowColor="@color/teal"
        android:text="@string/upcoming_events"
        android:textAllCaps="false"
        android:textColor="@color/appointments_background"
        android:textColorHint="@color/teal"
        android:textSize="14sp"
        android:textStyle="bold"
        android:elegantTextHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/my_appointments_recycler_view"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>