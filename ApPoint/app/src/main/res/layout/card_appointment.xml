<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appointment_card"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="@dimen/spacing_small"
    android:background="@drawable/my_appointments_button">

    <LinearLayout
        android:id="@+id/ll_card_appointment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/spacing_normal"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="@dimen/title_large_textSize" />

        <TextView
            android:id="@+id/tv_place"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/spacing_normal"
            android:text="@string/business"
            android:textColor="@android:color/black"
            android:layout_weight="2"
            android:textSize="@dimen/title_medium_textSize" />

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/spacing_small"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_hourglass_bottom_24" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>